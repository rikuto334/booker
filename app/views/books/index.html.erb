<h1>Books</h1>

<% @books.each do |book| %>
  <p>title</p>
  <span>
    <%= book.title %>
  </span>
  <p>body</p>
   <span>
     <%= book.body %>
   </span>
   <span>
     <p><%= link_to "show", book_path(book.id) %></p>
      <p><%= link_to "edit", edit_book_path(book.id) %></p>
      <p><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %></p>
   </span>

<%end%>

<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<%end%>